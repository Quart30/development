<html>
<body>
    <div class="page-wrap">
        <div class = "top-bar-section" >
            <div class="shameless-plug">Herald</div>
       </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 signin-cont">
                    <form class="signin-form" method="post" name="shit" action="checkin" enctype="application/x-www-form-urlencoded">
                        <h2>Sign in!</h2>
                        <div>
                            <input type="text" name="firstName"  placeholder="First Name" required>
                        </div>
                        <div>
                            <input type="text" name="lastName" placeholder="Last Name" required>
                        </div>
                        <div>
                            <input type="tel" name="phone"  placeholder="Phone Number">
                        </div>
                        <div>
                            <input type="hidden" id="date" name="date">
                        </div>
                        <div>
                            <input type="hidden" id="time " name="time">
                        </div>
                        <div>
                            <button class="custom-button" type="submit" id="signinButton" class="btn btn-primary">Check-In</button>
                        </div>
                    </form>
                </div>
            </div> <!-- row -->
        </div>
    </div>
    <footer class="footer site-footer">
        <ul class="list-inline">
            <li><a href="#" class="whitetext">Privacy</a></li>
