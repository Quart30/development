        </ul>
    </footer>

    <script>
    jQuery(document).ready(function($) {
        'use strict';
         console.log('nigga');
           var signinButton = document.getElementById('signinButton'),
            date = document.getElementById('date'),
            time = document.getElementById('time');


        $(signinButton).click(function(e){
            var dateObj = new Date();
            var currDate = "" + (dateObj.getMonth() + 1) +"," + dateObj.getDate() + "," + dateObj.getFullYear();
            console.log(currDate);
            var currTime = "" + ( ((dateObj.getHours() + 11) % 12) + 1) + "," + dateObj.getMinutes();
            console.log(currTime);
            $(date).attr("value", currDate);
            $(time).attr("value", currTime);


            $(signinButton).submit();

        });
    });
   </script>
</body>
</html>
