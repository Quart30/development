<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/businesssettings.css'/>
    <link rel='stylesheet' href='/stylesheets/specificSheets/footer.css'>
    <link rel='stylesheet' href='/stylesheets/specificSheets/header.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="page-wrap">
      <!-- nav bar -->
      <div class = "top-bar-section">
        <div style="padding-top: 33px;">
          <span class="shameless-plug">Herald</span>
        </div>
        <!--
        <div class="form-container">
          {{#message}}
            <div style="color: #FFF000">{{message}}</div>
          {{/message}}
        </div>
        -->
        <ul class="nav navbar-nav navbar-right navbar-padding nav-links">
          <li>
            <a href="/dashboard">Dashboard</a>
          </li>
          <li class="active">
            <a href="/addAppointment">Add Appointment</a>
          </li>
          <li>
            <a href="/accountSettings">Account Settings</a>
          </li>
          <li>
            <a href="/businesssetting">Company Settings</a>
          </li>
          <li>
            <a href="/logout">Logout</a>
          </li>
        </ul>
      </div>

      <!-- end nav bar -->

      <div class="row business-setting-margin">
        <div class="col-md-8 col-md-offset-2">
          <div>
            <div>
              <h1>Create A New Appointment</h1>
              <div class="row" style="text-align:center">
                {{#edited}}
                  <div class="alert alert-success" role="alert">
                    {{edited}}
                  </div>
                {{/edited}}
                {{#error}}
                  <div class="alert alert-danger" role="alert">
                    {{error}}
                  </div>
                {{/error}}
              </div>
              <hr>
            </div>
            <div>
              <div class="row">
                <div class="col-md-8 col-md-offset-2">
                   <h2 style="color: #FF0000"> {{message}} </h2>
                    <div class="panel-body">
                      <form class="form" action="" method="post">
                        <div class="row">
                          <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                              <label class = "label" for="email">Name</label>
                              <input type="text" id="name" name="name" class="form-control input-lg">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                              <label class = "label">Phone Number</label>
                              <input type="number" id="phone" name ="phone"class="form-control input-lg"">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                               <div class="form-group">
                                  <label class = "label">Appointment Date</label>
                                  <input type="date" id="date" name ="date"class="form-control input-lg"">
                               </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                               <div class="form-group">
                                  <label class = "label">Appointment Time</label>
                                  <input type="time" id="time" name ="time" class="form-control input-lg"">
                               </div>
                            </div>
                        </div>
                        <button type="submit" class="custom-button">Create Appointment</button>

                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
