<!DOCTYPE html>
<html>
<head>
    <title>{{ title }}</title>

    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel='stylesheet' href= '/stylesheets/addemployeepage.css'>
    <link rel='stylesheet' href= '/stylesheets/specificSheets/footer.css'>
    <link rel='stylesheet' href= '/stylesheets/specificSheets/header.css'>

    {{#newrelic}}
        {{{ newrelic.getBrowserTimingHeader }}}
    {{/newrelic}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="page-wrap">
    <!-- nav bar -->
    <div class = "top-bar-section">
      <div style="padding-top: 33px;">
        <span class="shameless-plug">Herald</span>
      </div>
      <div class="form-container">
        {{#message}}
          <div style="color: #FFFFFF">{{message}}</div>
        {{/message}}
      </div>
      <ul class="nav navbar-nav navbar-right navbar-padding nav-links">
        <li>
          <a href="/dashboard" style="color: white;">Dashboard</a>
        </li>
        <li class="active">
          <a href="/addemployees" style="color: white;">Employees</a>
        </li>
        <li>
          <a href="/accountSettings"style="color: white;">Account Settings</a>
        </li>
        <li>
          <a href="/businesssetting"style="color: white;">Company Settings</a>
        </li>
        <li>
          <a href="/logout">Logout</a>
        </li>
      </ul>
    </div>
    <!-- end nav bar -->

    <div class="container">
        <h2>Register Employees</h2>
        <h4>Register all your employee(s)!</h4>
        <form method="post" action="addemployees" enctype="application/x-www-form-urlencoded">
            <textarea style="color: black;" type="text"name="csvEmployees" placeholder="Enter: Name, Email" required></textarea>
            <input style="margin-top: -39px;" class="btn custom-button" name="submit" type="submit" href="/addemployees" value="Submit">
        </form>

        <div class="row" id="regis-container">
            <div class="outerAlign" >
                <h3 class="text-center">Employees already registered</h3>
                    <div class="transbox">
                        <table class="table table tablewidth" id="registeredEmployees">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Permissions</th>
                                    <!--<th> </th>-->
                                    <th> </th>
                                </tr>
                            </thead>
                            {{#signed}}
                            <tr>
                                <td>{{fname}} {{lname}}</td>
                                <td>{{email}}</td>
                                <td>
                                    <form action="/addemployees/mod?email={{email}}&lvl=up" method="post">
                                        <input type="submit" class="emp_up" value="Up">
                                    </form>
                                </td>
                                <td>
                                    <form action="/addemployees/mod?email={{email}}&lvl=down" method="post">
                                        <input type="submit" class="emp_down" value="Down">
                                    </form>
                                </td>
                                <td>
                                    <form action="/addemployees/delete?email={{email}}" method="post">
                                        <input type="submit" class="emp_del" value="X">
                                    </form>
                                </td>
                            </tr>
                            {{/signed}}
                        </table>
                    </div>
                    <h3 class="not-registered text-center">Employees not yet registered</h3>
                    <div class="transbox">
                        <table class="table table tablewidth" id="unregisteredEmployees">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th> </th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            {{#notsigned}}
                            <tr>
                                <td>{{fname}} {{lname}}</td>
                                <td>{{email}}</td>
                                <td>
                                    <form action="#" method="get">
                                        <input type="submit" class="resend_email" value="Resend Email">
                                    </form>
                                </td>
                                <td>
                                    <form action="/addemployees/delete?email={{email}}" method="post">
                                        <input type="submit" class="emp_del" value="X">
                                    </form>
                                </td>
                            </tr>
                            {{/notsigned}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <footer class="footer site-footer">
    <ul class="list-inline">
      <li><a href="#" class="whitetext">Privacy</a></li>
      <li><a href="#" class="whitetext">Terms</a></li>
      <li><a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ"  class="whitetext">Support</a></li>
      <li class="footer-copyright">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Copyright &#169; Quart 3.0, Winter 2015. All Rights Reserved.</li>
    </ul>
  </footer>

</body>
</html>
