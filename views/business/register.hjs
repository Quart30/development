<!DOCTYPE html>
<html>
<head>
    <title>{{ title }}</title>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <!--<link rel='stylesheet' href='/stylesheets/style.css'/>-->
     <link rel='stylesheet' href='/stylesheets/register.css'/>


    {{#newrelic}}
        {{{ newrelic.getBrowserTimingHeader }}}
    {{/newrelic}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</head>

<body style="overflow-y: hidden;">

    <div class="initial-screen">
        <div class = "top-bar-section">
            <div style="padding-top: 33px;">
                <a class="shameless-plug">Herald</a>
            </div>
            <div class="form-container">
                <form action="login" method="post">
                    <label for="email" class="login-section-text" "form-label" >
                        <span class="form-span">Email</span>
                        <input type="email" class="form-input" id="email" name="email" required />
                    </label>
                    <label for="password" class = "login-section-text" "form-label">
                        <span class="form-span">Password</span>
                        <input type="password" class="form-input" id="password" name="password" required />
                    </label>
                    <button type="submit" class="standard-btn standard-btn-small">Log in</button>
                </form>
                {{#message}}
                   <div style="color: #FFFFFF">{{message}}</div>
                {{/message}}
            </div>
       </div>
        <div class="container">
            <div class="row" id="regis-container">
                <div class="col-md-12" style="text-align: center;">
                    <h2>Create an Account</h2>
                    <form method="post" action="" enctype="application/x-www-form-urlencoded">
                        <div>
                            <input class="regis form-input" type="text" name="companyName" value="{{ companyName }}" placeholder="  Company Name" required>
                        </div>
                        <div>
                            <input class="regis form-input" type="text" name="fname" value="{{ fname }}" placeholder="  First Name" required>
                        </div>
                        <div>
                            <input class="regis form-input" type="text" name="lname" value="{{ lname }}" placeholder="  Last Name" required>
                        </div>
                        <div>
                            <input class="regis form-input" type="email" name="email" value="{{ email }}" placeholder="  Email" required>
                        </div>
                        <div>
                            <input class="regis form-input" type="tel" name="phone" value="{{ phone }}" placeholder="  Phone Number" required>
                        </div>
                        <div>
                            <input class="regis form-input" type="password" name="password" value="{{ password }}" placeholder="  Password" required>
                        </div>
                        <div>
                            <input class="btn custom-button" name="submit" type="submit" value="Sign Up">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <p style="text-align: center; margin-top: 110px;">Â© Copyright 2058, Quart 3.0</p>
    </div>

</body>

</html>
