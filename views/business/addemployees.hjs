<!DOCTYPE html>
<html>
<head>
    <title>{{ title }}</title>

    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel='stylesheet' href= '/stylesheets/addemployeepage.css'>

    {{#newrelic}}
        {{{ newrelic.getBrowserTimingHeader }}}
    {{/newrelic}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</head>

<body>
    <!-- nav bar -->
    <div class = "top-bar-section">
      <div style="padding-top: 33px;">
        <span class="shameless-plug">Herald</span>
      </div>
      <div class="form-container">
        {{#message}}
          <div style="color: #FFFFFF">{{message}}</div>
        {{/message}}
      </div>
      <ul class="nav navbar-nav navbar-right navbar-padding nav-links">
        <li>
          <a href="/dashboard" style="color: white;">Dashboard</a>
        </li>
        <li class="active">
          <a href="/addemployees" style="color: white;">Employees</a>
        </li>
        <li>
          <a href="/accountSettings"style="color: white;">Settings</a>
        </li>
        <li>
          <a href="/businesssetting"style="color: white;">Company Name</a>
        </li>
      </ul>
    </div>
    <!-- end nav bar -->

    <div class="container">
        <h2>Register Employees</h2>
        <h4>Register all your employee(s) through a CSV file!</h4>
        <form method="post" action="addemployees" enctype="application/x-www-form-urlencoded">
            <textarea type="text"name="csvEmployees" placeholder="CSV of Employees EMAILS" required></textarea>
            <input style="margin-top: -39px;" class="btn custom-button" name="submit" type="submit" href="/addemployees" value="Upload">
        </form>

        <div class="row text-center" id="regis-container">
            <div class="outerAlign" >
                <h3 class="tableheader">Employees already registered</h3>
                    <div class="tableheader transbox">
                        <table class="table table tablewidth" id="registeredEmployees">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            {{#signed}}
                            <tr>
                                <td>{{fname}} {{lname}}</td>
                                <td>{{email}}</td>
                            </tr>
                            {{/signed}}
                        </table>
                    </div>
                    <h3 class="tableheader">Employees not yet registered</h3>
                    <div class="tableheader transbox">
                        <table class="table table tablewidth" id="unregisteredEmployees">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            {{#notsigned}}
                            <tr>
                                <td>{{fname}} {{lname}}</td>
                                <td>{{email}}</td>
                            </tr>
                            {{/notsigned}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
