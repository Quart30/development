<!DOCTYPE html>
<html>
<head>

    <title>{{ title }}</title>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/registerDevice.css' />
    {{#newrelic}}
        {{{ newrelic.getBrowserTimingHeader }}}
    {{/newrelic}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</head>
<body>
 <div class="page-wrap">
    <!-- nav bar -->
      <div class = "top-bar-section">
        <div style="padding-top: 33px;">
          <span class="shameless-plug">Herald</span>
        </div>
        <div class="form-container">
          {{#message}}
            <div>{{message}}</div>
          {{/message}}
        </div>
        <ul class="nav navbar-nav navbar-right navbar-padding nav-links">
          <li>
            <a href="/dashboard">Dashboard</a>
          </li>
          <li>
            <a href="/addemployees">Employees</a>
          </li>
          <li class="active">
            <a href="/accountSettings">Settings</a>
          </li>
          <li>
            <a href="/businesssetting">Company Name</a>
          </li>
        </ul>
      </div>
      <div class="top-bar-section-secondary" id="secondary_navbar">
          <ul class="nav navbar-nav navbar-right navbar-secondary">
              <li class="active"><a href="/registerDevice">Configurations</a></li>
              <!--<li><a href="/manageforms">Manage Forms</a></li>-->
              <li><a href="/uploadlogo">Upload Logo</a></li>
              <li>
                  <a href="/customizetheme">Customize Theme</a>
              </li>
              <li><a href="/accountSettings">Account Settings</a></li>
          </ul>
      </div>
      <!-- end nav bar -->

  <div class="container">
  {{#message}}
   <div class="alert alert-danger">{{message}}</div>
  {{/message}}

  <div style="position:absolute;top:180px;left:80px">
    <h2 top="50px" align="left">Setting Up</h2>
      <span align="left" class="subtitle">Register all of your devices and generate activation keys</span>
        <div style="position:relative;top:50px;left:30px">
          <h3 top="50px" align="left">Registered Devices</h3>
          <span align="left" class="subtitle">Devices currently set up with iReceptionist</span>



         <table id="devices" class="table devices">
           <tr>
           <td>Device Name</td>
           <td>Employee</td>
           <td>Delete</td>
           </tr>
             {{#tokensDB}}
             <tr>
             <td>{{name}}</td>
             <td>{{employee}}</td>
             <td>
                 <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever={{_id}}  id={{_id}}><span class="glyphicon glyphicon-trash"></span></button>
             </td>
             </tr>
             {{/tokensDB}}
           </table>
        </div>
  </div>
       <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog">
           <div class="modal-content">
             <div class="modal-header">
               <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               <h4 class="modal-title" id="exampleModalLabel">Are you you want to remove this device?</h4>
             </div>
             <div class="modal-footer">
               <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
               <button type="button" class="btn btn-danger deleteBtn" data-dismiss="modal">Delete</button>
             </div>
           </div>
         </div>
       </div>
 </div>
</div>
</div>

 <footer class="footer site-footer">
    <ul class="list-inline">
      <li><a href="#" class="whitetext">Privacy</a></li>
      <li><a href="#" class="whitetext">Terms</a></li>
      <li><a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ"  class="whitetext">Support</a></li>
      <li class="footer-copyright">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Copyright &#169; Quart 3.0, Winter 2015. All Rights Reserved.</li>
    </ul>
  </footer>

 <script>
     console.log("Entered Script")
     $(".deleteBtn").click(function() {
     $myval = $(this).val();
     var name = "/api/m/mobileToken/" + $myval;
     $.ajax({
         type: "DELETE",
         url: name,
         success: function() {
         $('#' + $myval).parent().parent().remove();
         }
         });
      });

     $('#exampleModal').on('show.bs.modal', function (event) {
         var button = $(event.relatedTarget);
         var recipient = button.data('whatever');
         var modal = $(this);
         modal.find('.modal-footer button').val(recipient);
     });
 </script>
</body>
</html>
